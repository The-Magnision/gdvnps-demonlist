---
interface Props {
  title?: string;
}

const { title = "Website" } = Astro.props;
---

<!DOCTYPE html>
<html lang="vi">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
  </head>
  <body class="bg-stone-800 font-serif text-white">
    <slot />
  </body>
  <footer class="flex bottom-0 left-0 right-0 fixed pb-10 justify-center gap-4 font-serif text-sm text-stone-400">
    &copy; GDVNPS 2025 All rights reserved
  </footer>
</html>
